{
  "name": "claudeisms",
  "version": "2.0.0",
  "description": "Operational guidelines: terse responses, sequential execution, no destructive ops without confirmation",
  "author": {
    "name": "Jefferson Warrior",
    "github": "https://github.com/jeffersonwarrior"
  },
  "hooks": {
    "SessionStart": {
      "handler": "hooks-handlers/session-start.sh"
    },
    "BeforeToolUse(Write(file_path:**/*.md))": {
      "handler": "hooks-handlers/before-md-write.sh"
    },
    "BeforeToolUse(Write(file_path:**/*README*))": {
      "handler": "hooks-handlers/before-md-write.sh"
    },
    "BeforeToolUse(Write(file_path:**/*SETUP*))": {
      "handler": "hooks-handlers/before-md-write.sh"
    }
  }
}
