{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks-handlers/session-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write",
        "filePathMatcher": "**/*.md",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks-handlers/before-md-write.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "filePathMatcher": "**/*README*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks-handlers/before-md-write.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "filePathMatcher": "**/*SETUP*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks-handlers/before-md-write.sh"
          }
        ]
      }
    ]
  }
}
